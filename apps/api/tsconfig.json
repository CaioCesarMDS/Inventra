{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "24.0.0",

  "compilerOptions": {
    "lib": ["es2024"],
    "module": "esnext",
    "target": "es2022",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@inventra/shared": ["../../packages/shared/src"],
    },
  },
}
