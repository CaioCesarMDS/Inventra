{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "RESTful API and business logic core for Inventra applications",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "tsup src/server.ts --format esm --clean --minify",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "4.0.16",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.6.1",
    "@inventra/shared": "workspace:*",
    "@scalar/fastify-api-reference": "^1.40.9",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.6.2",
    "fastify-type-provider-zod": "^6.1.0",
    "pg": "^8.16.3",
    "zod": "^4.2.1"
  }
}
